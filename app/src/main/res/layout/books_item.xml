<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/book_title"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/roboto"
        android:padding="@dimen/padding"
        android:text="@string/tv_title"
        android:textFontWeight="@integer/font_weight"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/book_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/margin_right"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:maxWidth="20dp"
        android:maxLines="1"
        android:padding="@dimen/padding"
        android:text="@string/tv_author"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/book_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"/>

    <TextView
        android:id="@+id/book_description"
        android:layout_width="389dp"
        android:layout_height="67dp"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="@dimen/margin_right"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/tv_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/book_title"
        tools:text="@tools:sample/lorem/random" />


</androidx.constraintlayout.widget.ConstraintLayout>